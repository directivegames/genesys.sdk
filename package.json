{
  "name": "genesys.sdk",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev:main": "tsc --watch -p tsconfig.json",
    "dev:preload": "tsc --watch -p tsconfig.preload.json",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron dist/backend/main.js",
    "dev": "npm run compile && concurrently -k -n MAIN,PRELOAD,VITE \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:vite\" \"npm run dev:electron\"",
    "compile": "tsc -p tsconfig.json && tsc -p tsconfig.preload.json",
    "build": "vite build && npm run compile",
    "dist": "npm run build && electron-builder",
    "lint": "eslint . --fix --ext .ts,.tsx"
  },
  "build": {
    "appId": "com.directivegames.genesys.sdk",
    "productName": "Genesys-SDK",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraMetadata": {
      "main": "dist/backend/main.js"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "tsc-watch": "^6.3.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0",
    "eslint-plugin-import": "^2.31.0"
  }
}
