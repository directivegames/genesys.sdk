{
  "name": "genesys.sdk",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev:vite": "vite",
    "dev:electron": "tsc --watch",
    "dev": "concurrently -k -n VITE,ELECTRON \"vite\" \"tsc --watch --preserveWatchOutput\" \"wait-on http://localhost:5173 && electron dist/main.js\"",
    "build": "vite build && tsc",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.directivegames.genesys.sdk",
    "productName": "Genesys-SDK",
    "files": [
      "dist/**/*",
      "dist/main.js"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraMetadata": {
      "main": "dist/main.js"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}
