{
  "name": "genesys.sdk",
  "version": "0.0.8",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev:main": "tsc --watch -p tsconfig.json",
    "dev:preload": "tsc --watch -p tsconfig.preload.json",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron dist/backend/main.js",
    "dev": "npm run compile && concurrently -k -n MAIN,PRELOAD,VITE \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:vite\" \"npm run dev:electron\"",
    "compile": "tsc -p tsconfig.json && tsc -p tsconfig.preload.json",
    "build": "vite build && npm run compile",
    "dist": "npm run build && electron-builder",
    "lint": "eslint . --fix --ext .ts,.tsx"
  },
  "build": {
    "artifactName": "Genesys-Setup-${version}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "directivegames",
        "repo": "genesys.sdk",
        "private": true
      }
    ],
    "asar": true,
    "asarUnpack": [
      "assets/**"
    ],
    "appId": "com.directivegames.genesys.sdk",
    "productName": "Genesys",
    "files": [
      "dist/**/*",
      {
        "from": "node_modules/three/examples/jsm",
        "to": "node_modules/three/examples/jsm",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraMetadata": {
      "main": "dist/backend/main.js"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/lab": "^7.0.0-beta.12",
    "@mui/material": "^7.1.0",
    "chokidar": "^4.0.3",
    "core-util-is": "^1.0.3",
    "cors": "^2.8.5",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "genesys.js": "^0.0.108",
    "jsdom": "^26.1.0",
    "multer": "^2.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/multer": "^1.4.12",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.24.0",
    "eslint-plugin-import": "^2.31.0",
    "tsc-watch": "^6.3.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}
